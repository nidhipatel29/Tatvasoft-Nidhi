}

<div class="clip">
    <img src="~/images/group-16_2.png" style="width:100% ">
</div>
<div class="contact_txt">Contact us</div>
<div class="forma1">
    <hr class="Rectangle-5-copy-5">
    <div class="separator"><img src="~/images/separator.png"></div>
    <hr class="Rectangle-5-copy-4">
</div>
<div class="e-forma1">
    <div class="box1">
        <div><img src="~/images/forma-1_2.png"></div>
        <span>1111 Lorem ipsum text 100,<br> Lorem ipsum AB</span>
    </div>
    <div class="box1">
        <div><img src="~/images/forma-1_2.png"></div>
        <span>+49 (40) 123 56 7890<br> +49 (40) 123 56 7890</span>
    </div>
    <div id="box2">
