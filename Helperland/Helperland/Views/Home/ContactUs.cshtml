</div>
<!--form-->
<div class="form">
    <div class="row">
        <div class="item1"><input class="inputBox" type="text" name="firstname" placeholder="First name"></div>
        <div class="item2"><input class="inputBox" type="text" name="lastname" placeholder="last name"></div>
    </div>
    <div class="row">
        <div class="item1"><input class="inputBox" type="phone number" name="email" placeholder="phone number"></div>
        <div class="item2"><input class="inputBox" type="email" name="lastname" placeholder="Email address"></div>
    </div>
    <div>
        <select id="subject" class="inputBox" name="Subject">
            <option value="Subject" selected>Subject</option>
            <option value="cp">cp</option>
            <option value="cp">cp</option>
        </select>
    </div>
    <div class="txtarea">
        <textarea class="textField" row="5" placeholder="Message"></textarea>
    </div>
    <div><button class="btn">submit</button></div>
</div>
<div class="map-img d-flex justify-content-center align-items-center">
    <img class="m-0" src="~/images/pin.png" alt="map">
</div>